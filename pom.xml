<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.acromere.pom</groupId>
		<artifactId>prd</artifactId>
		<version>1.0-SNAPSHOT</version>
	</parent>

	<groupId>com.acromere</groupId>
	<artifactId>weave</artifactId>
	<version>1.7-SNAPSHOT</version>
	<packaging>jar</packaging>

	<name>Weave</name>
	<description>Update utility</description>
	<inceptionYear>2018</inceptionYear>

	<developers>
		<developer>
			<name>Mark Soderquist</name>
			<email>mark@soderquist.net</email>
			<roles>
				<role>Architect</role>
			</roles>
		</developer>
	</developers>

	<repositories>
		<repository>
			<id>acm</id>
			<url>https://repo.acromere.com/acm</url>
		</repository>
	</repositories>

	<pluginRepositories>
		<pluginRepository>
			<id>acm</id>
			<url>https://repo.acromere.com/acm</url>
		</pluginRepository>
	</pluginRepositories>

	<properties>
		<images-folder>target/main/images</images-folder>

		<java.version>25</java.version>

		<!-- Runtime dependencies -->
		<!-- Version numbers updated 30 Jan 2026 -->
		<zenna.version>0.12-SNAPSHOT</zenna.version>
		<zevra.version>0.12-SNAPSHOT</zevra.version>
		<openjfx.version>25.0.2</openjfx.version>

		<!-- Plugin versions -->
		<cameo.version>2.13-SNAPSHOT</cameo.version>
	</properties>

	<dependencies>

		<dependency>
			<groupId>com.acromere</groupId>
			<artifactId>zevra</artifactId>
			<version>${zevra.version}</version>
			<optional>true</optional>
		</dependency>

		<dependency>
			<groupId>com.acromere</groupId>
			<artifactId>zenna</artifactId>
			<version>${zenna.version}</version>
			<optional>true</optional>
		</dependency>

	</dependencies>

	<build>
		<plugins>

			<plugin>
				<groupId>com.acromere</groupId>
				<artifactId>cameo</artifactId>
				<version>${cameo.version}</version>
				<executions>
					<execution>
						<id>render-images</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>render</goal>
						</goals>
						<configuration>
							<images>
								<image>
									<class>com.acromere.weave.icon.WeaveIcon</class>
									<target>${images-folder}/weave.png</target>
									<theme>light</theme>
								</image>
							</images>
							<icons>
								<icon>
									<target>${images-folder}/weave.ico</target>
									<theme>light</theme>
									<images>
										<image>
											<class>com.acromere.weave.icon.WeaveIcon</class>
											<size>16</size>
										</image>
										<image>
											<class>com.acromere.weave.icon.WeaveIcon</class>
											<size>24</size>
										</image>
										<image>
											<class>com.acromere.weave.icon.WeaveIcon</class>
											<size>32</size>
										</image>
										<image>
											<class>com.acromere.weave.icon.WeaveIcon</class>
											<size>48</size>
										</image>
										<image>
											<class>com.acromere.weave.icon.WeaveIcon</class>
											<size>64</size>
										</image>
										<image>
											<class>com.acromere.weave.icon.WeaveIcon</class>
											<size>96</size>
										</image>
										<image>
											<class>com.acromere.weave.icon.WeaveIcon</class>
											<size>128</size>
										</image>
									</images>
								</icon>
							</icons>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<configuration>
					<links>
						<link>https://www.acromere.com/product/zevra/docs/api</link>
					</links>
					<failOnError>false</failOnError>
				</configuration>
			</plugin>

		</plugins>
	</build>

</project>
